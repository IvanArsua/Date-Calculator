<Window x:Class="IvanArsua.DateCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IvanArsua.DateCalculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="290">
    <Grid>
        <DatePicker x:Name="dtBirthday" HorizontalAlignment="Left" Height="30" Margin="52,40,0,0" VerticalAlignment="Top" Width="192"/>
        <Button x:Name="btnCalculate" Content="Click Me" HorizontalAlignment="Left" Height="32" Margin="126,88,0,0" VerticalAlignment="Top" Width="118" Click="btnCalculate_Click"/>

    </Grid>
</Window>
